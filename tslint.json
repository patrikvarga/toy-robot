{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest"
  ],
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "jsdoc-format": true,
    "no-implicit-dependencies": [
      true,
      "dev"
    ],
    "no-var-keyword": true,
    "quotemark": [
      true,
      "double",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "never"
    ]
  }
}